---
import Base from "@/layouts/Base.astro";
import PageHeader from "@/components/core/PageHeader.astro";
import { getEntry } from "astro:content";

const page = await getEntry("pages", "documentation");
const { title, description } = page.data;
---

<Base
  title={title}
  description={description}
>
  <PageHeader page_data={{title: title, description: description, data: {}}} />
  
  <section class="section-sm">
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-10">
          <div class="content">
            <h2>Coming soon</h2>
            <br/>
            <p>...</p>
            <br/>
            <p>
              FocusUI is a revolutionary drawer-based UI system that implements importance-driven visual hierarchy. 
              This documentation will help you understand and implement FocusUI in your projects.
            </p>
            <br/>
            <h4>Browser Support</h4>
            <br/>
            <ul>
              <li>✅ Desktop browsers (Chrome, Firefox, Safari, Edge)</li>
              <li>✅ Mobile browsers (iOS Safari, Chrome Mobile)</li>
              <li>✅ Tablet browsers (iPad Safari, iPad Chrome)</li>
              <li>✅ Responsive design with orientation change support</li>
            </ul>
            <div class="bg-gradient-to-r from-red-500 to-blue-500 text-white rounded-lg p-6 my-8">
              <h4 class="text-white mb-4">Ready to Experience FocusUI?</h4>
              <p class="mb-4">Try our interactive demos to see the importance-driven visual hierarchy in action.</p>
              <div class="flex flex-wrap gap-4">
                <a href="/demo/index.html" class="btn bg-white text-gray-900 hover:bg-gray-100">Interactive Demo</a>
                <a href="/demo-cross-device/index.html" class="btn border-white text-white hover:bg-white hover:text-gray-900">Cross-Device Demo</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
